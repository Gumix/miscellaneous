[color]
	ui = true
[color "diff"]
	plain = white
	meta = white bold
	func = white bold
	whitespace = normal red
[color "grep"]
	filename = magenta
	linenumber = white
	match = yellow
[user]
	name = Ilya Verbin
	email = iverbin@gmail.com
[core]
	editor = nvim
	pager = delta
	excludesfile = ~/.gitignore
[push]
	default = simple
[grep]
	linenumber = true
[pull]
	ff = only
[diff]
	noprefix = true
[merge] 
	tool = nvimdiff
	conflictStyle = zdiff3
[mergetool] 
	prompt = false 
	keepBackup = false
[interactive]
	diffFilter = delta --color-only
[delta]
	line-numbers = true
	side-by-side = true
	navigate = true
	dark = true
	syntax-theme = 1337_g
